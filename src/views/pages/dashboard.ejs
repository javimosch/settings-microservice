<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'Settings Microservice' %></title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script src="https://cdn.jsdelivr.net/npm/vue@3/dist/vue.global.js"></script>
</head>
<body class="bg-gray-100 min-h-screen">
  <nav class="bg-white shadow-lg">
    <div class="max-w-7xl mx-auto px-2 sm:px-4">
      <div class="flex justify-between h-14 sm:h-16">
        <div class="flex items-center">
          <a href="/dashboard" class="text-base sm:text-xl font-bold text-gray-800">Settings Microservice</a>
        </div>
        <div class="flex items-center space-x-2 sm:space-x-4">
          <% if (typeof user !== 'undefined' && user) { %>
            <span class="text-gray-600 text-xs sm:text-base hidden sm:inline">Welcome, <%= user %></span>
            <a href="/logout" class="text-red-600 hover:text-red-800 text-sm sm:text-base">Logout</a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>

  <div class="max-w-7xl mx-auto py-4 sm:py-6 px-2 sm:px-4" id="app">
    
<div>
  <div class="mb-4 sm:mb-6">
    <h1 class="text-2xl sm:text-3xl font-bold text-gray-900">Dashboard</h1>
    <p class="text-sm sm:text-base text-gray-600 mt-1 sm:mt-2">Manage organizations and settings</p>
  </div>

  <div class="bg-white rounded-lg shadow p-3 sm:p-6 mb-4 sm:mb-6">
    <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-4 gap-2 sm:gap-0">
      <h2 class="text-lg sm:text-xl font-semibold">Organizations</h2>
      <% if (typeof userPermissions !== 'undefined' && userPermissions?.features?.organizations?.write) { %>
      <button 
        @click="showOrgForm = true; editingOrg = null"
        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-3 sm:px-4 rounded text-sm sm:text-base w-full sm:w-auto"
      >
        + New Organization
      </button>
      <% } %>
    </div>

    <div class="mb-4">
      <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-2">Select Organization:</label>
      <select 
        v-model="selectedOrgId"
        @change="loadSettings()"
        class="w-full border border-gray-300 rounded px-2 sm:px-3 py-2 text-sm sm:text-base"
      >
        <option value="">-- Select Organization --</option>
        <option v-for="org in organizations" :key="org._id" :value="org._id">{{ org.name }}</option>
      </select>
      
      <!-- Show selected org ID -->
      <div v-if="selectedOrgId" class="mt-2 p-2 sm:p-3 bg-blue-50 rounded border border-blue-200">
        <div class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-2">
          <div class="break-all">
            <span class="text-xs font-medium text-blue-800">Organization ID:</span>
            <code class="ml-1 sm:ml-2 bg-white px-1 sm:px-2 py-1 rounded text-xs sm:text-sm text-blue-600 font-mono">{{ selectedOrgId }}</code>
          </div>
          <button 
            @click="copyToClipboard(selectedOrgId)" 
            class="text-xs bg-blue-500 hover:bg-blue-600 text-white px-2 sm:px-3 py-1 rounded whitespace-nowrap"
            title="Copy to clipboard"
          >
            ðŸ“‹ Copy
          </button>
        </div>
      </div>
    </div>

    <div class="overflow-x-auto -mx-3 sm:mx-0">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-2 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
            <th class="px-2 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase hidden md:table-cell">Organization ID</th>
            <th class="px-2 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase hidden sm:table-cell">Created</th>
            <th class="px-2 sm:px-6 py-2 sm:py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <tr v-for="org in organizations" :key="org._id">
            <td class="px-2 sm:px-6 py-3 sm:py-4 font-medium text-sm sm:text-base">
              <div>{{ org.name }}</div>
              <div class="md:hidden mt-1">
                <code class="bg-gray-100 px-1 py-0.5 rounded text-xs text-blue-600 cursor-pointer break-all" 
                      @click="copyToClipboard(org._id)" 
                      :title="'Click to copy: ' + org._id">
                  {{ org._id }}
                </code>
              </div>
            </td>
            <td class="px-2 sm:px-6 py-3 sm:py-4 hidden md:table-cell">
              <code class="bg-gray-100 px-2 py-1 rounded text-xs text-blue-600 cursor-pointer" 
                    @click="copyToClipboard(org._id)" 
                    :title="'Click to copy: ' + org._id">
                {{ org._id }}
              </code>
            </td>
            <td class="px-2 sm:px-6 py-3 sm:py-4 hidden sm:table-cell text-xs sm:text-sm text-gray-500">{{ new Date(org.createdAt).toLocaleDateString() }}</td>
            <td class="px-2 sm:px-6 py-3 sm:py-4 text-xs sm:text-sm">
              <% if (typeof userPermissions !== 'undefined' && userPermissions?.features?.organizations?.write) { %>
              <button @click="editOrg(org)" class="text-blue-600 hover:text-blue-900 mr-2 sm:mr-3">Edit</button>
              <button @click="deleteOrg(org._id)" class="text-red-600 hover:text-red-900">Delete</button>
              <% } else { %>
              <span class="text-gray-400 text-xs">Read-only</span>
              <% } %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Quick Access Cards - Permission-based visibility -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 sm:gap-6 mt-4 sm:mt-6">
    <% 
    const hasAnySettingAccess = (typeof userPermissions !== 'undefined' && userPermissions && userPermissions.features) ? 
      (userPermissions.features.globalSettings.read || 
       userPermissions.features.clientSettings.read || 
       userPermissions.features.userSettings.read || 
       userPermissions.features.dynamicSettings.read) : true;
    
    const hasDynamicAuthAccess = (typeof userPermissions !== 'undefined' && userPermissions && userPermissions.features) ? 
      userPermissions.features.dynamicAuth.read : true;
    %>
    
    <% if (hasAnySettingAccess) { %>
    <div class="bg-white rounded-lg shadow p-4 sm:p-6">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-3 sm:mb-4 gap-2">
        <h2 class="text-lg sm:text-xl font-semibold">Settings</h2>
        <a href="/settings" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-3 sm:px-4 rounded text-sm sm:text-base w-full sm:w-auto text-center">
          Manage â†’
        </a>
      </div>
      <p class="text-sm sm:text-base text-gray-600">Manage three-tier settings and dynamic settings</p>
      <ul class="mt-3 sm:mt-4 space-y-1 sm:space-y-2 text-xs sm:text-sm text-gray-600">
        <li>â€¢ Global - Organization-wide defaults</li>
        <li>â€¢ Client - Client-specific overrides</li>
        <li>â€¢ User - User-specific preferences</li>
        <li>â€¢ Dynamic - Custom unique ID based</li>
      </ul>
    </div>
    <% } %>

    <% if (hasDynamicAuthAccess) { %>
    <div class="bg-white rounded-lg shadow p-4 sm:p-6">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-3 sm:mb-4 gap-2">
        <h2 class="text-lg sm:text-xl font-semibold">Dynamic Auth</h2>
        <a href="/dynamicauth" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-3 sm:px-4 rounded text-sm sm:text-base w-full sm:w-auto text-center">
          Manage â†’
        </a>
      </div>
      <p class="text-sm sm:text-base text-gray-600">Configure authentication middlewares for external APIs</p>
      <ul class="mt-3 sm:mt-4 space-y-1 sm:space-y-2 text-xs sm:text-sm text-gray-600">
        <li>â€¢ HTTP - Call external auth services</li>
        <li>â€¢ JavaScript - Custom validation logic</li>
        <li>â€¢ Caching - Configurable TTL</li>
        <li>â€¢ Testing - Built-in test interface</li>
      </ul>
    </div>
    <% } %>

    <% if (typeof userRole !== 'undefined' && userRole === 'admin') { %>
    <div class="bg-white rounded-lg shadow p-4 sm:p-6">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-3 sm:mb-4 gap-2">
        <h2 class="text-lg sm:text-xl font-semibold">Integration</h2>
        <a href="/integration" class="bg-teal-500 hover:bg-teal-700 text-white font-bold py-2 px-3 sm:px-4 rounded text-sm sm:text-base w-full sm:w-auto text-center">
          Open â†’
        </a>
      </div>
      <p class="text-sm sm:text-base text-gray-600">Build example cURLs for external Settings APIs.</p>
      <ul class="mt-3 sm:mt-4 space-y-1 sm:space-y-2 text-xs sm:text-sm text-gray-600">
        <li>â€¢ Choose feature scope (global, client, user, dynamic)</li>
        <li>â€¢ Select read/write operations</li>
        <li>â€¢ Fill in params and headers via forms</li>
        <li>â€¢ Generate and copy ready-to-use cURL commands</li>
      </ul>
    </div>

    <div class="bg-white rounded-lg shadow p-4 sm:p-6">
      <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-3 sm:mb-4 gap-2">
        <h2 class="text-lg sm:text-xl font-semibold">User Management</h2>
        <a href="/users" class="bg-purple-500 hover:bg-purple-700 text-white font-bold py-2 px-3 sm:px-4 rounded text-sm sm:text-base w-full sm:w-auto text-center">
          Manage â†’
        </a>
      </div>
      <p class="text-sm sm:text-base text-gray-600">Manage user accounts and permissions</p>
      <ul class="mt-3 sm:mt-4 space-y-1 sm:space-y-2 text-xs sm:text-sm text-gray-600">
        <li>â€¢ Create/edit user accounts</li>
        <li>â€¢ Configure role-based permissions</li>
        <li>â€¢ Manage organization access</li>
        <li>â€¢ Set resource-level constraints</li>
      </ul>
    </div>
    <% } %>
  </div>

  <div v-show="showOrgForm" class="fixed inset-0 bg-gray-600 bg-opacity-50 flex items-center justify-center p-4 z-50">
    <div class="bg-white rounded-lg p-4 sm:p-8 max-w-md w-full">
      <h3 class="text-lg sm:text-xl font-bold mb-4">{{ editingOrg ? 'Edit Organization' : 'New Organization' }}</h3>
      <form @submit.prevent="saveOrg()">
        <div class="mb-4">
          <label class="block text-gray-700 text-xs sm:text-sm font-bold mb-2">Name</label>
          <input 
            v-model="orgForm.name"
            type="text" 
            required
            class="shadow appearance-none border rounded w-full py-2 px-3 text-sm sm:text-base text-gray-700"
          />
        </div>
        <div class="flex flex-col sm:flex-row justify-end gap-2 sm:gap-0 sm:space-x-3">
          <button 
            type="button"
            @click="showOrgForm = false"
            class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded text-sm sm:text-base order-2 sm:order-1"
          >
            Cancel
          </button>
          <button 
            type="submit"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-sm sm:text-base order-1 sm:order-2"
          >
            Save
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

  </div>

  <script>
    const { createApp } = Vue;

    createApp({
      data() {
        return {
          organizations: [],
          selectedOrgId: '',
          showOrgForm: false,
          editingOrg: null,
          orgForm: { name: '' }
        };
      },
      mounted() {
        this.loadOrganizations();
        // Load selected org from localStorage
        const savedOrgId = localStorage.getItem('selectedOrgId');
        if (savedOrgId) {
          this.selectedOrgId = savedOrgId;
        }
      },
      methods: {
        async loadOrganizations() {
          try {
            const data = await fetchAPI('/api/internal/organizations');
            this.organizations = data;
          } catch (error) {
            console.error('Failed to load organizations:', error);
          }
        },

        async saveOrg() {
          const url = this.editingOrg 
            ? `/api/internal/organizations/${this.editingOrg._id}`
            : '/api/internal/organizations';
          const method = this.editingOrg ? 'PUT' : 'POST';
          
          await fetchAPI(url, {
            method,
            body: JSON.stringify(this.orgForm)
          });
          
          this.showOrgForm = false;
          this.orgForm = { name: '' };
          await this.loadOrganizations();
          showNotification('Organization saved successfully');
        },

        editOrg(org) {
          this.editingOrg = org;
          this.orgForm = { name: org.name };
          this.showOrgForm = true;
        },

        async deleteOrg(id) {
          if (!confirm('Are you sure?')) return;
          await fetchAPI(`/api/internal/organizations/${id}`, { method: 'DELETE' });
          await this.loadOrganizations();
          showNotification('Organization deleted successfully');
        },

        loadSettings() {
          // Save to localStorage whenever org is selected
          if (this.selectedOrgId) {
            localStorage.setItem('selectedOrgId', this.selectedOrgId);
          } else {
            localStorage.removeItem('selectedOrgId');
          }
        },

        copyToClipboard(text) {
          navigator.clipboard.writeText(text).then(() => {
            showNotification('Copied to clipboard!');
          }).catch(() => {
            // Fallback for older browsers
            const textarea = document.createElement('textarea');
            textarea.value = text;
            document.body.appendChild(textarea);
            textarea.select();
            document.execCommand('copy');
            document.body.removeChild(textarea);
            showNotification('Copied to clipboard!');
          });
        }
      }
    }).mount('#app');

    function showNotification(message, type = 'success') {
      const notification = document.createElement('div');
      notification.className = `fixed top-4 right-4 px-6 py-3 rounded shadow-lg ${type === 'success' ? 'bg-green-500' : 'bg-red-500'} text-white z-50`;
      notification.textContent = message;
      document.body.appendChild(notification);
      setTimeout(() => notification.remove(), 3000);
    }

    async function fetchAPI(url, options = {}) {
      try {
        const response = await fetch(url, {
          ...options,
          headers: {
            'Content-Type': 'application/json',
            ...options.headers
          }
        });
        const data = await response.json();
        if (!response.ok) {
          throw new Error(data.error || 'Request failed');
        }
        return data;
      } catch (error) {
        showNotification(error.message, 'error');
        throw error;
      }
    }
  </script>
</body>
</html>

